@{
    Layout = "_Layout";
}

@model IEnumerable<Book>
    <div>
            <div class="results">
                @foreach (var book in Model)
                {
                    <div class="flip-card">
                        <div class="flip-card-inner">
                            <div class="flip-card-front">
                                <img src="../../shutterstock_green.jpeg" alt="Avatar" style="width:300px;height:350px;">
                            </div>
                            <div class="flip-card-back">
                                <h2>@book.Title</h2>
                                <br />
                                <br />
                                <br />
                                <p>@book.Author</p>
                                <p>@book.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>




