@model IEnumerable<Book>

<h2>Books</h2>

<table class="table">
    <tr>
        <th>BookID</th>
        <th>Title</th>
        <th>Author</th>
        <td>Genre</td>
        <th>Characteristics</th>
    </tr>

    @foreach (var book in Model)
    {
        <tr>
            <td><a href=/Book/ViewBook/@book.BookID>@book.BookID</td>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Genre</td>
            <td>@book.Characteristics</td>
        </tr>

    }
</table>

